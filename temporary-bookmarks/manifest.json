{
    "manifest_version": 2,
    "name": "Temporary Bookmarks",
    "description": "This extension will allow you to create temporary bookmarks",
    "version": "0.1",
    "browser_action": {
        "name": "Temporary Bookmarks"
    },
    "background":{
        "scripts": [
            "add.js", 
            "remove.js"
        ]
    },
    "permissions": [
        "tabs",
        "bookmarks"
    ]
}